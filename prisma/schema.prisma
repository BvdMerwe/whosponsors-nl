generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id         Int      @id @default(autoincrement())
  tradeName  String   @unique
  industry   Industry @relation(fields: [industryId], references: [id])
  industryId Int
}

model Industry {
  id      Int       @id @default(autoincrement())
  name    String
  slug    String
  Company Company[]
}
